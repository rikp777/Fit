@model Fit.ViewModels.Article.ArticleAddNutrientIntakeViewModel
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="card">
    <div class="card-body">
        <form class="form" asp-controller="Article" asp-action="AddNutrientIntake">         
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="@Model.NutrientId">Voedingstof</label>
                    <select class="form-control" asp-for="@Model.NutrientId" asp-items="Model.NutientsList"></select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.Amount">Aantal</label>
                    <input type="number" class="form-control" placeholder="Hoeveelheid" asp-for="@Model.Amount" required>
                </div>         
            </div>                         
            <button type="submit" class="btn btn-success">Voeg Toe</button>
        </form>
    </div>
</div>
