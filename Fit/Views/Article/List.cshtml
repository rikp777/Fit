@using Fit.ViewModels.Auth
@using Interfaces
@model Fit.ViewModels.Article.ArticleListViewModel;

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    var authUser = ViewData["AuthUser"] as IUser;
}
@* <div class="card"> *@
