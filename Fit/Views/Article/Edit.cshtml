                    <label asp-for="@Model.Name">Artikel Naam</label>
                    <input type="text" class="form-control" placeholder="First name" asp-for="@Model.Name" value="@Model.Name" required>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="@Model.Calories">CalorieÃ«n</label>
