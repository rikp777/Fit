@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Fit.ViewModels.Article.ArticleAddViewModel;
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<div class="card">
    <div class="card-body">
        <form class="form" asp-controller="Article" asp-action="Add">
            
            @if (Model.NutrientIntakes == null)
            {
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="Name">Artikel Naam</label>
                        <input type="text" class="form-control" placeholder="First name" id="Name" name="Name" required>
                    </div>
                    <div class="form-group col-md-6">
                        <label for="Calories">CalorieÃ«n</label>
                        <input type="number" class="form-control" placeholder="First name" id="Calories" name="Calories" required>
                    </div>         
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="NutrientIntake">Voedingstoffen</label>
                        <select multiple="multiple" class="form-control" id="NutrientIntake" asp-for="@Model.NutrientIds" asp-items="Model.NutientsList"></select>
                    </div>
                </div> 
            }
            else
            {
                foreach (var nutrient in Model.NutrientIntakes)
                {
                    <div class="form-group">
                        <label for="Calories">@nutrient.Nutrient.Name</label>
                        <input type="number" class="form-control" placeholder="Hoeveelheid" asp-for="@nutrient.Amount" required>
                    </div>
                }
            }          
            
            <button type="submit" class="btn btn-success">Submit</button>
        </form>
    </div>
</div>
