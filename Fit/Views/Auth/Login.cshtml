@using Logic.Models
@model Fit.ViewModels.Auth.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card rounded-0">
            <div class="card-header">
                <h3 class="mb-0">Login</h3>
            </div>
            <div class="card-body">
                <form class="form" role="form" id="formLogin" method="post">
                    <div class="form-group">
                        <label>Username</label>
                        <input class="form-control" asp-for="@Model.Email" type="email"/>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input class="form-control" asp-for="@Model.Password" type="password" />
                    </div>
                        @if (Model.Message != null)
                        {
                            if (Model.Message.Type == MessageType.Warning)
                            {
                                <div class="alert alert-danger" role="alert">
                                    @Model.Message.Text
                                </div>
                            }
                        }    
                    <button type="submit" class="btn btn-primary btn-lg float-right" id="btnLogin">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
